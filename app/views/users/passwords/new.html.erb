<div id="login-container">

  <h1 id="tzukuri-head">T Z U K U R I</h1>
  <p id="subhead">Enter your email address to reset your password</p>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
    </div>

    <div id="flash-messages">
      <%= devise_error_messages! %>
    </div>

    <div id="actions" data-error="<%= devise_error_messages!.size > 0 %>">
      <%= f.submit "Reset Password", id: "password_reset" %>
    </div>

  <% end %>

    <br/><br/>
    <%= render "devise/shared/links" %>

</div>
