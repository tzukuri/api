<div id="login-container">

  <h1 id="tzukuri-head">send unlock instructions?</h1>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "email address" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", id: "send_unlock"%>
      </div>
    <% end %>

    <br/><br/>
    <%= render "devise/shared/links" %>

</div>


<div id="main-map" class="blur"></div>

<!-- JAVASCRIPT -->
<script>
  // initialise a simple map
  tzukuri.map.inject({
    element: 'main-map',
    disableControls: true
  })
</script>
