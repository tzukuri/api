<div class="container" id="preorder-nav">
  <a href="#" id="type" class="current">type</a>
  <a href="#" id="frame">frame</a>
  <a href="#" id="size">size</a>
  <a href="#" id="delivery">delivery</a>
  <a href="#" id="payment">payment</a>
</div>

<div id="preorder" class="container">
      <!-- 1 - select type -->
      <div class="step-container" id="step-type">
        <h1>Choose your type</h1>
        <div class="row">
          <div class="five columns" data-type="optical">
              <div class="select-type">
                <%= image_tag 'frames/ford/ford_black_optical.jpg' %>
                <p>optical</p>
              </div>
              <p class="price"><span class="bold">Pre-order for $<span class="pr">125</span> AUD</span><br/>$550 AUD total</p>
          </div>
          <div class="two columns">&nbsp;</div>
          <div class="five columns" data-type="sun">
              <div class="select-type">
                <%= image_tag 'frames/ive/ive_black_sun.jpg' %>
                <p>sun</p>
              </div>
              <p class="price"><span class="bold">Pre-order for $99 AUD</span><br/>$425 AUD total</p>
          </div>
        </div>
      </div>

      <!-- 2 - select frame -->
      <div class="step-container hidden" id="step-frames">
        <h1>Choose your frames</h1>
        <div class="row">
          <div class="five columns select-frame" data-frame="ford">
              <%= image_tag 'frames/ford/ford_black_sun.jpg', class: 'sun' %>
              <%= image_tag 'frames/ford/ford_black_optical.jpg', class: 'optical' %>
              <p>Ford</p>
          </div>
          <div class="two columns">&nbsp;</div>
          <div class="five columns select-frame" data-frame="ive">
              <%= image_tag 'frames/ive/ive_black_sun.jpg', class: 'sun' %>
              <%= image_tag 'frames/ive/ive_black_optical.jpg', class: 'optical' %>
              <p>Ive</p>
          </div>
        </div>
      </div>

      <!-- 2 - select size -->
      <div class="step-container hidden" id="step-size">
        <h1>Choose your size</h1>
        <div class="row">
          <div class="five columns">
            <div class="select-size" data-size="" id="small">
              <p>Small</p>
            </div>
            <p class="size-exp">This size fits most people.</p>
          </div>
          <div class="two columns">&nbsp;</div>
          <div class="five columns">
            <div class="select-size" data-size="" id="large">
              <p>Large</p>
            </div>
            <p class="size-exp">Choose this size if most glasses are too small for you.</p>
          </div>
        </div>
      </div>

      <!-- 3 - enter shipping details -->
      <div class="step-container hidden" id="step-details">
        <h1>Enter delivery details</h1>

        <div class="row step-content">
          <div class="six columns" id="glasses">
            <div class="row">
              <%= image_tag 'frames/ive/ive_black_optical.jpg', class: 'checkout-img', id: 'ive-black' %>
              <%= image_tag 'frames/ford/ford_black_optical.jpg', class: 'checkout-img hidden', id: 'ford-black' %>
            </div>
            <div class="row">
              <div class="twelve columns glasses-details">
                <dl>
                  <dt>Frame</dt>
                  <dd id="frame-selection"></dd>
                  <br/>
                  <dt>Size</dt>
                  <dd id="size-selection"></dd>
                  <br/>
                  <dt>Lens</dt>
                  <dd id="lens-selection">Optical</dd>
                </dl>
              </div>
            </div>
          </div>
          <div class="one column">&nbsp;</div>
          <div class="five columns" id="shipping">
            <%= form_for Purchase.new, :url => beta_orders_path, :html => {:method => :post}, remote:true do |f| %>
            <p>Contact Details</p>
            <%= f.text_field :name, placeholder: 'Full name', autofocus: true %><br/>
            <%= f.text_field :email, placeholder: 'Email Address' %><br/>
            <%= f.telephone_field :phone,    placeholder: 'Mobile number' %><br/>

            <p>Shipping Details</p>
            <%= f.text_field :address1, placeholder: 'Street name, number, etc.' %><br/>
            <%= f.text_field :address2, placeholder: 'City, suburb, etc.' %><br/>
            <%= select_tag   :state, options_for_select(['NSW', 'ACT', 'NT', 'QLD', 'SA', 'TAS', 'VIC', 'WA' ]) %><br/>
            <%= f.text_field :postcode, placeholder: 'Postcode', maxlength: 4 %><br/>
            <%= f.text_field :country,  placeholder: 'country', value: 'Australia', disabled: true %><br/>
            <p id="error-messages"></p>
            <% end %>
            <button id="shipping-continue" class="order-btn next">continue&nbsp;&nbsp;<i class="fa fa-chevron-right"></i></button>
            <div class="loading-spinner"></div>
          </div>
        </div>
      </div>

      <!-- 6 - enter payment information -->
      <div class="step-container hidden" id="step-payment">
        <h1>Review and pay</h1>

        <div class="row step-content">
          <div class="six columns">
            <div class="row">
              <%= image_tag 'frames/ive/ive_black_optical.jpg', class: 'checkout-img', id: 'conf-ive-black' %>
              <%= image_tag 'frames/ford/ford_black_optical.jpg', class: 'checkout-img hidden', id: 'conf-ford-black' %>
            </div>
            <div class="row">
              <div class="twelve columns glasses-details">
                <dl>
                  <dt>Frame</dt>
                  <dd id="conf-frame"></dd>
                  <br/>
                  <dt>Size</dt>
                  <dd id="conf-size"></dd>
                  <br/>
                  <dt>Deliver To</dt>
                  <dd id="conf-address"></dd>
                  <br/>
                </dl>
              </div>
            </div>
          </div>
          <div class="one column">&nbsp;</div>
          <div class="five columns" style="margin-top: 40px;">
            <p id="total">Total price <span class="bold">$425 AUD</span>. You will be charged a <span class="bold">$95 AUD</span> fully-refundable deposit.</p>
            <br/>
            <form id="payment-form">
              <div id="cc">
                <p><input type="text" data-stripe="number" placeholder="credit card number"></p>
                <p>
                  <select name="month" style="width: 32%" data-stripe="exp-month">
                    <option value="1">Jan (01)</option>
                    <option value="2">Feb (02)</option>
                    <option value="3">Mar (03)</option>
                    <option value="4">Apr (04)</option>
                    <option value="5">May (05)</option>
                    <option value="6">Jun (06)</option>
                    <option value="7">Jul (07)</option>
                    <option value="8">Aug (08)</option>
                    <option value="9">Sep (09)</option>
                    <option value="10">Oct (10)</option>
                    <option value="11">Nov (11)</option>
                    <option value="12">Dec (12)</option>
                  </select>
                  <select name="year" style="width: 32%" data-stripe="exp-year">
                    <option>2016</option>
                    <option>2017</option>
                    <option>2018</option>
                    <option>2019</option>
                    <option>2020</option>
                    <option>2021</option>
                    <option>2022</option>
                    <option>2023</option>
                    <option>2024</option>
                    <option>2025</option>
                    <option>2026</option>
                  </select>
                  <input type="text" placeholder="CVC" data-stripe="cvc" style="width: 32%">
                </p>
              </div>
              <br/>
              <div id="submit">
                <button type="submit" class="order-btn finish">Pay $95</button>
                <div id="payment-message"></div>
                <p id="remainder">The remaining $330 will be charged upon shipping.</p>
              </div>
            </form>
          </div>
        </div>
      </div>
</div>

