<% @body_id = 'cart' %>
<div class="container" id="cart-container" data-hook="cart_container">
  <h1><%= Spree.t(:shopping_cart) %></h1>

  <% if @order.line_items.empty? %>
    <div data-hook="empty_cart">
      <div class="alert alert-info"><%= Spree.t(:your_cart_is_empty) %></div>
      <p><%= link_to Spree.t(:continue_shopping), products_path, class: 'btn btn-default' %></p>
    </div>
  <% else %>
    <div id="outside_cart_form" data-hook="outside_cart_form">
      <%= form_for @order, url: 'update_cart_path', html: { id: 'update-cart' } do |order_form| %>
        <div data-hook="inside_cart_form">

          <div class="row" data-hook="cart_items">
            <%= render partial: 'form', locals: { order_form: order_form } %>
          </div>

          <div class="row">
            <div class="three columns">
              <%= button_tag class: 'alternate', id: 'update-button' do %>
                <%#= Spree.t(:update) %>
                Update Cart
              <% end %>
            </div>

            <div class="three columns">
              <div id="empty-cart" data-hook>
                <%= form_tag empty_cart_path, method: :put do %>
                  <!-- <p id="clear_cart_link" data-hook>
                    <%= submit_tag Spree.t(:empty_cart), class: 'btn btn-default' %>
                    <%= Spree.t(:or) %>
                    <%= link_to Spree.t(:continue_shopping), products_path, class: 'continue' %>
                  </p> -->
                <% end %>
              </div>
            </div>

            <div class="six columns">
              <div id="coupon_code" data-hook='coupon_code'>
                <div class="six columns">
                  <%= order_form.label :coupon_code %>
                  <%= order_form.text_field :coupon_code, size: '30', class: 'form-control' %>
                </div>
                <div class="six columns">
                  <%= button_tag  id: 'apply-coupon', class: 'alternate' do %>
                  Apply Coupon
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="six columns">
              &nbsp;
            </div>

            <div class="six columns">
              <%= button_tag class: '', id: 'checkout-link', name: 'checkout' do %>
                <%= Spree.t(:checkout) %>
              <% end %>
            </div>
          </div>

        </div>
      <% end %>
    </div>
  <% end %>
</div>

<script>
  Spree.current_order_id = "<%= @order.number %>"
  Spree.current_order_token = "<%= @order.guest_token %>"
</script>
