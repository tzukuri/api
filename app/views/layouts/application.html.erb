<!DOCTYPE html>
<html class="<%= params[:page] || controller_name %>">
    <head>
        <title><%= @page_title || "Tzukuri - Beautiful wearable technology" %></title>

        <%= stylesheet_link_tag    'application', media: 'all' %>
        <%= javascript_include_tag 'application' %>
        <%= csrf_meta_tags %>

        <link rel="stylesheet" href="/fonts/pe-icon-7-filled/css/pe-icon-7-filled.css">
        <meta name="viewport" content="width=device-width, maximum-scale=1.0, initial-scale=1.0, user-scalable=yes">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

        <meta name="Description" content="Tzukuri designs the world's finest glasses and sunglasses, which you can never lose. Every pair comes with solar powered iBeacons and is handmade in Japan.">
        <meta name="twitter:site" content="@tzukuri">
    </head>

    <body>
        <div id="blur-content">
            <header>
                <div>
                    <h1><a href="/"><%= image_tag 'logo.png', height: 25, alt: 'Tzukuri' %></a></h1>
                    <span class="pe-7f-check" style="color: white; opacity: 0.0"></span>
                    <a id="hamburger" class="fa fa-bars"></a>
                    <menu>
                        <nav>
                            <a href="/technology" class="<%= 'selected' if params[:page] == 'technology' %>">technology</a>
                            <a href="/design" class="<%= 'selected' if params[:page] == 'design' %>">design</a>
                            <a href="/craftsmanship" class="<%= 'selected' if params[:page] == 'craftsmanship' %>">craftsmanship</a>
                        </nav>
                        <button id="show-subscribe">Subscribe</button>
                    </menu>
                </div>
            </header>

            <%= yield %>

            <div id="share-panel" style="display: none">
                <div>
                    <div>
                        <span><a href="#" class="fa fa-facebook" id="share-fb"></a></span>
                        <span><a href="#" class="fa fa-twitter" id="share-twitter"></a></span>
                        <span><a href="#" class="fa fa-pinterest" id="share-pinterest"></a></span>
                    </div>
                    <div>
                        <span><a href="#" class="fa fa-tumblr" id="share-tumblr"></a></span>
                        <span><a href="#" class="fa fa-envelope-square" id="share-email"></a></span>
                        <span><a href="#" class="fa fa-link" id="share-link"></a></span>
                    </div>
                    <div>
                        <span>&nbsp;</span>
                        <span>&nbsp;</span>
                        <span><a href="#" id="close-share-panel" class="fa fa-close"></a></span>
                    </div>
                </div>
            </div>
        </div>

        <div id="subscribe-popup" class="hidden" style="display: none">
            <div id="subscribe-form">
                <%= form_for Email.new, remote: true do |f| %>
                    <div id="text-container">
                        <%= f.label :email, 'Subscribe for updates' %>
                        <p id="subscribe-status" style="display: none"></p>
                    </div>
                    <p>
                        <%= f.text_field :email, placeholder: 'email' %>
                        <button style="display: none"><span class="pe-7f-check"></span></button>
                    </p>
                <% end %>
            </div>
        </div>

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-49901333-1', 'tzukuri.com');
            ga('send', 'pageview');
        </script>
    </body>
</html>
